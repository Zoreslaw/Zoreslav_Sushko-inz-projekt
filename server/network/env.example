# TeamUp Environment Variables
# Copy this file to .env and update with your values

# ===== Database Configuration =====
POSTGRES_DB=teamup
POSTGRES_USER=teamup_user
POSTGRES_PASSWORD=change_this_secure_password_in_production

# ===== Backend API Configuration =====
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Database connection string (auto-constructed, or override)
# ConnectionStrings__DefaultConnection=Host=postgres;Database=teamup;Username=teamup_user;Password=your_password

# ===== Authentication & Security =====
# JWT secret must be at least 32 characters
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production

# Firebase project ID for Firebase Auth integration
FIREBASE_PROJECT_ID=your-firebase-project-id

# API Keys (if needed)
API_KEY_SECRET=your-api-key-secret

# ===== ML Service Configuration =====
MODEL_PATH=/app/models/twotower_v6_optimal.pt
FLASK_ENV=production
LOG_LEVEL=INFO

# ML Service URL (from backend perspective)
ML_SERVICE_BASE_URL=http://ml-service:5000
ML_SERVICE_TIMEOUT=30

# ===== Redis Configuration =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (seconds)
CACHE_PROFILE_TTL=300
CACHE_RECOMMENDATIONS_TTL=900
CACHE_EMBEDDINGS_TTL=3600

# ===== Nginx Configuration =====
# Domain for production
DOMAIN_NAME=your-domain.com

# ===== Logging & Monitoring =====
LOG_LEVEL=Information
ENABLE_DETAILED_ERRORS=false

# ===== Rate Limiting =====
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ML_REQUESTS_PER_MINUTE=30

# ===== CORS Configuration =====
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ===== Feature Flags =====
ENABLE_CACHE=true
ENABLE_EMBEDDINGS_CACHE=true
ENABLE_SWAGGER=false
ENABLE_ML_BATCH_EMBEDDING=true

# ===== Performance =====
MAX_CANDIDATES=1000
DEFAULT_TOP_K=20
BATCH_SIZE=100

# ===== Database Backup =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

